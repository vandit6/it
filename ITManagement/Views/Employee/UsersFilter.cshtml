@model ITManagement.ViewModels.UserWithDevicesViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    /* Custom styles for better UI */
    .btn-icon {
        font-size: 1.5rem;
        margin-right: 5px;
    }
    .btn-primary {
        background-color: #333;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1.4rem;
        cursor: pointer;
        box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .head {
        font-size: 2.5rem;
        font-weight: 600;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    }

    .table-container {
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        background-color: #f8f8f8;
        border-radius: 5px;
        padding: 10px;
    }

    .user-section {
        margin-top: 20px;
        border: 1px solid #e0e0e0;
        padding: 10px 15px;
        border-radius: 5px;
        box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        background-color: #f8f8f8;
    }

    /* Add style to align search bar and button in the same row */
    .search-bar {
        display: flex;
        align-items: center;
    }

    /* Smaller search bar input */
    .small-search-input {
        width: 200px;
        padding: 5px;
        font-size: 1rem;
        margin: 0 10px;
    }

    .info {
        background-color: #333;
        color: #fff;
    }

    .data {
        background-color: #f9f9f9;
    }
    .filter{
        font-size:1.8rem;
    }
</style>

<h1 class="head text-center" style="font-size: 5rem; margin: 30px">EMPLOYEE</h1>

@using (Html.BeginForm("UsersFilter", "Employee", FormMethod.Get))
{
    <div class="container filter">
        <div class="search-bar">
            @Html.Label("Search by Username:")
            @Html.TextBoxFor(model => model.SelectedUsername, new { @class = "form-control small-search-input" })
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">
                    Filter
                </button>
            </div>
        </div>
    </div>
}

@foreach (var user in Model.UsersWithDevices.GroupBy(ud => ud.UserId))
{
    <div class="user-section">
        <h2>@user.First().UserName</h2> <!-- Display the username for the group -->
        <div class="table-container">
            <table class="table table-striped table-bordered">
                <thead class="info">
                    <tr>
                        <th>User ID</th>
                        <th>User Name</th>
                        <th>User Email</th>
                        <th>Device Name</th>
                        <th>Device ID</th>
                        <th>Category Name</th>
                        <th>Device Description</th>
                        <th>Allotted Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in user)
                    {
                        <tr>
                            <td class="data">@item.UserId</td>
                            <td class="data">@item.UserName</td>
                            <td class="data">@item.UserEmail</td>
                            <td class="data">@(item.DeviceName != "N/A" ? item.DeviceName : "")</td>
                            <td class="data">@(item.DeviceID > 0 ? item.DeviceID.ToString() : "")</td>
                            <td class="data">@(item.CategoryName != "N/A" ? item.CategoryName : "")</td>
                            <td class="data">@(item.DeviceDescription != "N/A" ? item.DeviceDescription : "")</td>
                            <td class="data">@(item.AllottedDate.HasValue ? item.AllottedDate.Value.ToString("MM/dd/yyyy") : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
